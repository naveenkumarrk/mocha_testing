{
  "name": "todo-worker",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "npx wrangler dev",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,css,md}\"",
    "test": "mocha 'test/**/*.test.js'",
    "test:coverage": "npm run lint && npm run format:check && c8 --reporter=lcov --reporter=text npm test",
    "test:coverage:html": "npm run lint && npm run format:check && c8 --reporter=html --reporter=text npm test",
    "pretest": "npm run lint && npm run format:check",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@istanbuljs/esm-loader-hook": "^0.2.0",
    "c8": "^10.1.3",
    "chai": "^4.3.10",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "prettier": "^3.6.2",
    "sinon": "^17.0.1"
  },
  "dependencies": {
    "itty-router": "^5.0.22",
    "joi": "^18.0.1"
  }
}
